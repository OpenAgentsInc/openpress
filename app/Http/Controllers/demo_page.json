{
  "title": "The Atlantis Port Company",
  "slug": "welcome",
  "theme": {
    "colors": {
      "primary": "#FFFFFF",
      "secondary": "#1E274B",
      "background": "#1E274B",
      "text": "#FFFFFF"
    },
    "typography": {
      "fontFamily": "'Berkeley Mono', monospace",
      "fontSize": {
        "base": "16px",
        "h1": "2.5rem",
        "h2": "2rem"
      }
    },
    "spacing": {
      "small": "0.5rem",
      "medium": "1rem",
      "large": "2rem"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px"
    }
  },
  "styles": {
    "global": {
      "fontFamily": "'Berkeley Mono', monospace",
      "letterSpacing": "0.05em"
    },
    "container": {
      "padding": "2rem"
    },
    "heading": {
      "fontWeight": "bold",
      "marginBottom": "1rem"
    }
  },
  "containerClasses": "h-screen fixed w-full overflow-auto uppercase flex flex-col justify-center items-center",
  "blocks": [
    {
      "type": "Container",
      "id": "main-container",
      "attributes": {
        "className": "page-container flex flex-col items-center justify-center w-full h-full",
        "style": {
          "backgroundColor": "{{theme.colors.background}}",
          "color": "{{theme.colors.text}}",
          "fontFamily": "{{theme.typography.fontFamily}}"
        }
      },
      "children": [
        {
          "type": "Container",
          "id": "hero-container",
          "attributes": {
            "className": "flex flex-col items-center justify-center"
          },
          "children": [
            {
              "type": "Image",
              "id": "star-image",
              "attributes": {
                "src": "images/star.png",
                "alt": "Star",
                "width": 60,
                "height": 60,
                "className": "mb-4"
              }
            },
            {
              "type": "Image",
              "id": "logo-image",
              "attributes": {
                "src": "images/tapc.png",
                "alt": "The Atlantis Port Company",
                "width": 700,
                "height": 600,
                "className": "max-w-full h-auto mb-8"
              }
            },
            {
              "type": "Paragraph",
              "id": "subheading-paragraph",
              "attributes": {
                "className": "text-center max-w-3xl",
                "style": {
                  "fontFamily": "{{theme.typography.fontFamily}}"
                },
                "content": "We are building a network state to bootstrap oceanic civilization.\n\nAutomated ports, OTEC, offshore bitcoin mining & AI data centers.\n\nAll of this has not yet been economically feasible.\n\nWe've identified the path to make it feasible."
              }
            }
          ]
        }
      ]
    }
  ]
}