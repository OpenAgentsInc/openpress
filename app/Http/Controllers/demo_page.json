{
  "title": "The Atlantis Port Company",
  "slug": "welcome",
  "theme": {
    "background-color": "#242A4C",
    "color": "#FFFFFF"
  },
  "containerClasses": [
    "h-screen",
    "fixed",
    "w-full",
    "overflow-auto",
    "uppercase"
  ],
  "blocks": [
    {
      "type": "Container",
      "id": "main-container",
      "attributes": {
        "className": "page-container",
        "style": {
          "background-color": "{{theme.background-color}}",
          "color": "{{theme.color}}",
          "font-family": "'Berkeley Mono', monospace"
        }
      },
      "children": [
        {
          "type": "Image",
          "id": "hero-image",
          "attributes": {
            "src": "images/tapc.png",
            "alt": "OpenPress Hero Image",
            "width": 700,
            "height": 600
          }
        },
        {
          "type": "Grid",
          "id": "features-grid",
          "attributes": {
            "columns": 3,
            "gap": "20px"
          },
          "children": [
            {
              "type": "Container",
              "id": "feature-1",
              "children": [
                {
                  "type": "Headline",
                  "id": "feature-1-title",
                  "attributes": {
                    "level": "h3",
                    "content": "Easy to Use"
                  }
                },
                {
                  "type": "Button",
                  "id": "feature-1-button",
                  "attributes": {
                    "text": "Learn More",
                    "url": "/features/easy-to-use",
                    "style": {
                      "font-family": "'Berkeley Mono', monospace"
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
